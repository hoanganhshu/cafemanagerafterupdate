<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Fragment.diachigiaohang_activity"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/toolbardiachi"
        app:title="Địa chỉ giao hàng"
        app:titleTextColor="#8B4513"
        android:background="@color/white"
        />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listviewdiachigiaohang"
        android:layout_marginTop="20dp"
        />
    <Button
        android:layout_width="300dp"
        android:layout_height="46dp"
        android:layout_gravity="center"
        android:text="Thêm địa chỉ giao hàng +"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:background="#8B4513"
        android:layout_marginTop="40dp"
        android:id="@+id/themdiachi"
        />








</LinearLayout>