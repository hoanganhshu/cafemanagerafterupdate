<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarsearch"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">



        <androidx.appcompat.widget.SearchView
            android:id="@+id/search_view1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:iconifiedByDefault="false"
            android:visibility="invisible"
             />


    </androidx.appcompat.widget.Toolbar>
    <ViewFlipper
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:id="@+id/viewflippertrangchu"

        />


    <LinearLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        android:padding="16dp">

        <Button
            android:id="@+id/tab_coffee"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:text="CÀ PHÊ"
            android:textColor="#6B4F3B"
            android:background="@drawable/border" />

        <Button
            android:id="@+id/tab_tea"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TRÀ SỮA"
            android:textColor="#6B4F3B"
            android:background="@drawable/border" />

        <Button
            android:id="@+id/tab_smoothie"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sinh tố"
            android:textColor="#6B4F3B"
            android:background="@drawable/border" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/filters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tabs"
        android:orientation="horizontal"
        android:padding="16dp">

        <Button
            android:id="@+id/filter_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tất cả"
            android:textSize="12dp"
            android:textColor="#6B4F3B"



             />

        <Button
            android:id="@+id/filter_ranking"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Xếp hạng"
            android:textSize="12dp"
            android:textColor="#6B4F3B"


             />

        <Button
            android:id="@+id/filter_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Giá"

            android:textSize="12dp"
            android:textColor="#6B4F3B"

            />

        <Button
            android:id="@+id/filter_promo"
            android:layout_width="0dp"

            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Giảm giá"
            android:textSize="12dp"
            android:textColor="#6B4F3B"

             />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:orientation="vertical"
        android:weightSum="3"
        android:background="#FFFFFF"
        android:padding="8dp">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listviewdongsp"
            />

    </LinearLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:menu="@menu/menu"
        android:background="@color/white"
        app:itemIconTint="@color/bottom_navigation"
        android:id="@+id/trangchubottom"
        app:itemTextColor="@color/bottom_navigation"

        />



</LinearLayout>



